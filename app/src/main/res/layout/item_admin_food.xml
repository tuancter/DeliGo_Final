<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Food Image -->
        <ImageView
            android:id="@+id/foodImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/content_desc_food_image"
            android:background="@color/image_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@android:drawable/ic_menu_gallery" />

        <!-- Food Name -->
        <TextView
            android:id="@+id/foodNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/foodImageView"
            app:layout_constraintTop_toTopOf="@id/foodImageView"
            tools:text="Delicious Pizza" />

        <!-- Food Price -->
        <TextView
            android:id="@+id/foodPriceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/foodNameTextView"
            app:layout_constraintStart_toStartOf="@id/foodNameTextView"
            app:layout_constraintTop_toBottomOf="@id/foodNameTextView"
            tools:text="50.000Ä‘" />

        <!-- Availability Status -->
        <TextView
            android:id="@+id/availabilityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="#4CAF50"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@id/foodNameTextView"
            app:layout_constraintTop_toBottomOf="@id/foodPriceTextView"
            tools:text="Available" />

        <!-- Action Buttons Container -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/foodImageView">

            <!-- Toggle Availability Button -->
            <Button
                android:id="@+id/toggleAvailabilityButton"
                style="@style/Widget.DeliGo.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle"
                android:textSize="14sp"
                android:minWidth="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Edit Button -->
            <Button
                android:id="@+id/editButton"
                style="@style/Widget.DeliGo.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="@string/edit"
                android:textSize="14sp"
                android:minWidth="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Delete Button -->
            <Button
                android:id="@+id/deleteButton"
                style="@style/Widget.DeliGo.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textSize="14sp"
                android:textColor="#F44336"
                android:minWidth="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
